<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title text-center">You played <%= @user_move %>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%= @user_move %>.png" class="img-responsive">
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title text-center">The computer played <%= @computer_move %>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%= @computer_move %>.png" class="img-responsive">
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="well">
          <h1 class="text-center">You <%= @outcome %>!</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5 class="panel-title">Summary</h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>When you played</th>
          <th>you won</th>
          <th>you lost</th>
          <th>you tied</th>
        </tr>

        <tr>
          <td>rock</td>
          <td>3</td>
          <td>0</td>
          <td>1</td>
        </tr>

        <tr>
          <td>paper</td>
          <td>0</td>
          <td>1</td>
          <td>1</td>
        </tr>

        <tr>
          <td>scissors</td>
          <td>1</td>
          <td>2</td>
          <td>2</td>
        </tr>

        <tr>
          <th>Total</th>
          <th>4</th>
          <th>3</th>
          <th>4</th>
        </tr>
      </table>
    </div>


    <div class="panel panel-info">
      <div class="panel-heading">
        <h5 class="panel-title">
          Complete history
          (11)
        </h5>
      </div>


<table class="table table-hover table-striped">
  <tr>
    <th>User Move</th>
    <th>Computer Move</th>
    <th>User Wins</th>
    <th>Computer Wins</th>
  </tr>
  <% @all_moves.each do |i| %>
    <tr>
      <td>
        <%= i.user_move %>
      </td>

      <td>
        <%= i.computer_move %>
      </td>

      <td>
        <%= i.user_wins %>
      </td>

      <td>
        <%= i.computer_wins %>
      </td>
    </tr>
  <% end %>

  <tr>
    <th></th>
    <th></th>
    <th><%= @all_moves.sum(:user_wins) %></th>
    <th><%= @all_moves.sum(:computer_wins) %></th>
  </tr>

</table>
</div>
</div>
</div>










